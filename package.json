{
  "name": "dokieli",
  "version": "0.3.13",
  "description": "dokieli is a client-side editor for decentralised article publishing, annotations and social interactions",
  "main": "./src/dokieli.js",
  "scripts": {
    "build-dist": "webpack --progress --colors",
    "build": "npm run build-dist",
    "build-simplerdf": "browserify --standalone ld src/simplerdf.js > scripts/simplerdf.js",
    "minify-simplerdf": "browserify --standalone ld src/simplerdf.js | uglifyjs -c > scripts/simplerdf.min.js",
    "copy-medium-editor": "cp node_modules/medium-editor/dist/js/medium-editor.min.js node_modules/medium-editor-tables/dist/js/medium-editor-tables.min.js scripts/",
    "standard": "standard src/fetcher.js src/uri.js src/graph.js src/doc.js src/auth.js src/util.js",
    "test": "npm run standard",
    "watch": "webpack --progress --colors --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/linkeddata/dokieli"
  },
  "keywords": [
    "decentralized",
    "linked data",
    "rdf",
    "research",
    "web annotation",
    "webid"
  ],
  "author": "the dokieli team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/linkeddata/dokieli/issues"
  },
  "homepage": "https://dokie.li/",
  "dependencies": {
    "medium-editor": "^5.23.3",
    "medium-editor-tables": "^0.6.1",
    "node-fetch": "^1.7.3",
    "npm": "^5.5.1",
    "rdf-parser-rdfa": "git://github.com/rdf-ext/rdf-parser-rdfa.git#master",
    "rdf-store-ldp": "^0.3.1",
    "simplerdf": "^0.2.14",
    "simplerdf-parse": "^0.1.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "standard": "^10.0.3",
    "webpack": "^3.5.5",
    "browserify": "^16.2.2",
    "babel-preset-env": "^1.7.0",
    "babelify": "^7.3.0"
  },
  "standard": {
    "globals": [
      "DO",
      "SimpleRDF",
      "ld",
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
